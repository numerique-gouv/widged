{
  "name": "main",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "APP_MAIN": "yarn workspace app-main",
    "APP_E2E": "yarn workspace app-e2e",
    "I18N": "yarn workspace packages-i18n",
    "app:dev": "yarn APP_MAIN run dev",
    "app:start": "yarn APP_MAIN run start",
    "app:build": "yarn APP_MAIN run build",
    "app:test": "yarn APP_MAIN run test",
    "ci:build": "yarn APP_MAIN run build:ci",
    "e2e:test": "yarn APP_E2E run test",
    "lint": "yarn APP_MAIN run lint && yarn APP_E2E run lint && yarn workspace eslint-config-main run lint && yarn I18N run lint"
  },
  "resolutions": {
    "@types/node": "20.14.2",
    "@types/react-dom": "18.3.0",
    "cross-env": "7.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.4.5",
    "yjs": "13.6.16"
  }
}
